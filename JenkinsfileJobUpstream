pipeline {
    agent any
    parameters {
        // Parallel Stage parameters
        booleanParam(name: 'BuildDownstream', defaultValue: false, description: 'Trigger build downstream')
        booleanParam(name: 'BuildJobWait', defaultValue: true, description: 'build job wait')
    }
    stages {
        stage("Upstream") {
            steps {
                echo "${BUILD_TAG}"
            }
        }
        stage("BuildDownstream") {
            when {
                expression {return params.BuildDownstream}
            }
            steps {
                build job : 'jenkins_pipeline_example_downstream', wait : params.BuildJobWait
            }
        }
    }
}
