pipeline {
    agent {
        docker {
            image 'ubuntu:latest'
            args '-v $HOME/temp:/docker_temp'
        }
    }
    parameters {
        booleanParam(name: 'RunBuildStage', defaultValue: true, description: 'Run Build Stage')
    }
    stages {
        stage("Build") {
            agent { dockerfile true }
            when {
                expression {return params.RunBuildStage}
                beforeAgent true
            }
            steps {
                sh 'python3 --version'
            }
        }
        stage("Test") {
            steps {
                sh 'echo hello'
                sh 'ls /docker_temp'
            }
        }
    }
}
